<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xingguang.finance.plan.mapper.RepymtPlanMapper" >
    <resultMap id="BaseResultMap" type="com.xingguang.finance.plan.entity.RepymtPlanEntity" >
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="wdrl_id" property="wdrlId" jdbcType="BIGINT" />
        <result column="cus_user_id" property="cusUserId" jdbcType="BIGINT" />
        <result column="principal" property="principal" jdbcType="DECIMAL" />
        <result column="interest" property="interest" jdbcType="DECIMAL" />
        <result column="plan_date" property="planDate" jdbcType="Date" />
        <result column="actual_date" property="actualDate" jdbcType="Date" />
        <result column="penalty" property="penalty" jdbcType="DECIMAL" />
        <result column="overdue_days" property="overdueDays" jdbcType="INTEGER" />
        <result column="stauts" property="stauts" jdbcType="INTEGER" />
        <result column="repymt_apply_id" property="repymtApplyId" jdbcType="BIGINT" />
    </resultMap>

    <resultMap id="BaseResultMapCustom" type="com.xingguang.finance.plan.entity.custom.RepymtPlanEntityCustom" extends="BaseResultMap">
        <result column="status_name" property="statusName" jdbcType="VARCHAR" />
    </resultMap>

    <sql id="Base_Column_List" >
        id, wdrl_id, cus_user_id, principal, interest, plan_date, actual_date, penalty,
        overdue_days, stauts, repymt_apply_id,
        if(status='10','未还款',if(status='20','已逾期',if(status=30,'已还款','逾期还款'))) status_name
    </sql>

    <select id="findAuditApplyList" parameterType="com.xingguang.finance.wdrl.entity.WdrlApplyEntity" resultMap="BaseResultMapCustom" >
        SELECT
        <include refid="Base_Column_List" />
        FROM wdrl_apply
        WHERE status = 10
        <if test="cusUserName != null" >
            AND cus_user_name LIKE CONCAT(CONCAT('%', #{cusUserName}), '%')
        </if>
        ORDER BY create_time
    </select>

    <select id="findPayApplyList" parameterType="com.xingguang.finance.wdrl.entity.WdrlApplyEntity" resultMap="BaseResultMapCustom" >
        SELECT
        <include refid="Base_Column_List" />
        FROM wdrl_apply
        WHERE status = 30
        <if test="cusUserName != null" >
            AND cus_user_name LIKE CONCAT(CONCAT('%', #{cusUserName}), '%')
        </if>
        ORDER BY create_time
    </select>

    <select id="findWdrlApplyById" parameterType="java.lang.Long" resultMap="BaseResultMapCustom">
        SELECT
        <include refid="Base_Column_List" />
        FROM wdrl_apply
        WHERE id = #{id,jdbcType=BIGINT}
    </select>

    <update id="updateWdrlApply" parameterType="com.xingguang.finance.wdrl.entity.WdrlApplyEntity">
        UPDATE wdrl_apply
        <set>
            <if test="status != null" >
                status = #{status,jdbcType=INTEGER},
            </if>
            <if test="auditorId != null" >
                auditor_id = #{auditorId,jdbcType=BIGINT},
            </if>
            <if test="auditorName != null" >
                auditor_name = #{auditorName,jdbcType=BIGINT},
            </if>
            <if test="auditorTime != null" >
                auditor_time = #{auditorTime,jdbcType=BIGINT},
            </if>
            <if test="operatorId != null" >
                operator_id = #{operatorId,jdbcType=BIGINT},
            </if>
            <if test="operatorName != null" >
                operator_name = #{operatorName,jdbcType=VARCHAR},
            </if>
            <if test="issueTime != null" >
                issue_time = #{issueTime,jdbcType=TIMESTAMP},
            </if>
            <if test="serviceCharge != null" >
                service_charge = #{serviceCharge,jdbcType=TIMESTAMP},
            </if>
            <if test="accMgmtCharge != null" >
                acc_mgmt_charge = #{accMgmtCharge,jdbcType=TIMESTAMP},
            </if>
        </set>
        WHERE id = #{id,jdbcType=BIGINT}
    </update>

</mapper>